<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MakroCompare1408.ViewModels"
        x:Class="MakroCompare1408.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Width="1000" Height="700"
        Title="Makro Kod Karşılaştırıcı"
        Background="#F5F5F5">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Grid.Row="0" 
                   Text="Makro Kod Karşılaştırıcı"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#1976D2"
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Kod Alanları -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*" ColumnSpacing="20">
            <!-- Kod 1 -->
            <StackPanel Grid.Column="0" Spacing="10">
                <TextBlock Text="Kod 1" FontWeight="Bold" Foreground="#388E3C" FontSize="16"/>
                <TextBox Text="{Binding Code1}" 
                         AcceptsReturn="True" 
                         Height="200"
                         Background="White"
                         Foreground="#212121"
                         BorderBrush="#BDBDBD"
                         BorderThickness="1"
                         CornerRadius="4"
                         FontFamily="Consolas"
                         FontSize="12"/>
            </StackPanel>

            <!-- Kod 2 -->
            <StackPanel Grid.Column="1" Spacing="10">
                <TextBlock Text="Kod 2" FontWeight="Bold" Foreground="#388E3C" FontSize="16"/>
                <TextBox Text="{Binding Code2}" 
                         AcceptsReturn="True" 
                         Height="200"
                         Background="White"
                         Foreground="#212121"
                         BorderBrush="#BDBDBD"
                         BorderThickness="1"
                         CornerRadius="4"
                         FontFamily="Consolas"
                         FontSize="12"/>
            </StackPanel>

            <!-- Sonuçlar -->
            <StackPanel Grid.Column="2" Spacing="10">
                <TextBlock Text="Sonuçlar" FontWeight="Bold" Foreground="#F57C00" FontSize="16"/>
                <Border Background="White" 
                        BorderBrush="#FFB74D" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding ResultText}" 
                                   Foreground="#E65100"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   TextWrapping="Wrap"/>
                        
                        <Separator Margin="0,10"/>
                        
                        <TextBlock Text="Detaylı Sonuçlar:" FontWeight="Bold" Foreground="#F57C00"/>
                        <TextBlock Text="{Binding SyntaxSimilarity, StringFormat='Yazım: %{0:F1}'}" 
                                   Foreground="#388E3C"/>
                        <TextBlock Text="{Binding LogicalSimilarity, StringFormat='Mantıksal: %{0:F1}'}" 
                                   Foreground="#1976D2"/>
                        <TextBlock Text="{Binding OverallSimilarity, StringFormat='Genel: %{0:F1}'}" 
                                   Foreground="#F57C00" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Butonlar -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Spacing="15"
                    Margin="0,20">
            <Button Command="{Binding CompareCodesCommand}"
                    Content="Karşılaştır"
                    Padding="20,10"
                    FontWeight="Bold"
                    Background="#1976D2"
                    Foreground="White"
                    CornerRadius="4"
                    IsEnabled="{Binding CanInteract}"/>
            
            <Button Command="{Binding ClearAllCommand}"
                    Content="Temizle"
                    Padding="20,10"
                    Background="#757575"
                    Foreground="White"
                    CornerRadius="4"
                    IsEnabled="{Binding CanInteract}"/>
        </StackPanel>

        <!-- İşlem Durumu -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Spacing="10"
                    Margin="0,10">
            <TextBlock Text="⏳ İşleniyor..." 
                       IsVisible="{Binding IsProcessing}"
                       Foreground="#F57C00"
                       FontWeight="Medium"
                       FontSize="14"/>
        </StackPanel>

        <!-- Analiz -->
        <StackPanel Grid.Row="4" Spacing="10" Margin="0,20,0,0">
            <TextBlock Text="Analiz" 
                       FontWeight="Bold" 
                       Foreground="#1565C0" 
                       FontSize="16"/>
            <ScrollViewer Height="150" 
                          Background="White" 
                          BorderBrush="#BDBDBD" 
                          BorderThickness="1" 
                          CornerRadius="4">
                <TextBlock Text="{Binding DetailedAnalysis}" 
                           Foreground="#424242"
                           FontSize="13"
                           TextWrapping="Wrap"
                           Margin="10"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>