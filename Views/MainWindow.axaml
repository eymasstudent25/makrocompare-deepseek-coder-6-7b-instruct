<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MakroCompare1408.ViewModels"
        x:Class="MakroCompare1408.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Width="1000" Height="800"
        Title="Makro Kod Karşılaştırıcı"
        Background="#F1F8E9">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Başlık -->
        <TextBlock Grid.Row="0" 
                   Text="Makro Kod Karşılaştırıcı"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#1E88E5"
                   TextAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Kod Alanları -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*,*" ColumnSpacing="20">
            <!-- Kod 1 -->
            <StackPanel Grid.Column="0" Spacing="10">
                <TextBlock Text="Kod 1" FontWeight="Bold" Foreground="#4CAF50" FontSize="16"/>
                <TextBox Text="{Binding Code1}" 
                         AcceptsReturn="True" 
                         Height="200"
                         Background="#FFFFFF"
                         Foreground="#2E7D32"
                         BorderBrush="#A5D6A7"
                         BorderThickness="2"
                         CornerRadius="6"
                         FontFamily="Consolas"
                         FontSize="12"/>
            </StackPanel>

            <!-- Kod 2 -->
            <StackPanel Grid.Column="1" Spacing="10">
                <TextBlock Text="Kod 2" FontWeight="Bold" Foreground="#4CAF50" FontSize="16"/>
                <TextBox Text="{Binding Code2}" 
                         AcceptsReturn="True" 
                         Height="200"
                         Background="#FFFFFF"
                         Foreground="#2E7D32"
                         BorderBrush="#A5D6A7"
                         BorderThickness="2"
                         CornerRadius="6"
                         FontFamily="Consolas"
                         FontSize="12"/>
            </StackPanel>

            <!-- Benzerlik Sonuçları -->
            <StackPanel Grid.Column="2" Spacing="10">
                <TextBlock Text="Benzerlik Sonuçları" FontWeight="Bold" Foreground="#FF6F00" FontSize="16"/>
                <Border Background="#FFF3E0" 
                        BorderBrush="#FFB74D" 
                        BorderThickness="2" 
                        CornerRadius="6" 
                        Padding="15">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding ResultText}" 
                                   Foreground="#E65100"
                                   FontSize="14"
                                   FontWeight="Medium"
                                   TextWrapping="Wrap"/>
                        
                        <Separator Margin="0,10"/>
                        
                        <TextBlock Text="Detaylı Sonuçlar:" FontWeight="Bold" Foreground="#FF6F00"/>
                        <TextBlock Text="{Binding SyntaxSimilarity, StringFormat='Syntax: %{0:F1}'}" 
                                   Foreground="#4CAF50"/>
                        <TextBlock Text="{Binding LogicalSimilarity, StringFormat='Mantıksal: %{0:F1}'}" 
                                   Foreground="#2196F3"/>
                        <TextBlock Text="{Binding OverallSimilarity, StringFormat='Genel: %{0:F1}'}" 
                                   Foreground="#FF9800" 
                                   FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Butonlar -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Spacing="15"
                    Margin="0,20">
            <Button Command="{Binding CompareCodesCommand}"
                    Content="Yapay Zeka ile Karşılaştır"
                    Padding="15,8"
                    FontWeight="Bold"
                    Background="#FB8C00"
                    Foreground="White"
                    CornerRadius="8"
                    IsEnabled="{Binding CanInteract}"/>
            
            <Button Command="{Binding ExplainCodeCommand}"
                    Content="Makroyu Açıkla"
                    Padding="15,8"
                    Background="#64B5F6"
                    Foreground="White"
                    CornerRadius="8"
                    IsEnabled="{Binding CanInteract}"/>
            
            <Button Command="{Binding ClearAllCommand}"
                    Content="Temizle"
                    Padding="15,8"
                    Background="#E57373"
                    Foreground="White"
                    CornerRadius="8"
                    IsEnabled="{Binding CanInteract}"/>
        </StackPanel>

        <!-- İşlem Durumu -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Spacing="10"
                    Margin="0,10">
            <TextBlock Text="⏳ İşleniyor..." 
                       IsVisible="{Binding IsProcessing}"
                       Foreground="#FF6F00"
                       FontWeight="Medium"
                       FontSize="16"/>
        </StackPanel>

        <!-- Detaylı Analiz -->
        <StackPanel Grid.Row="4" Spacing="10" Margin="0,20,0,0">
            <TextBlock Text="Detaylı Analiz" 
                       FontWeight="Bold" 
                       Foreground="#1565C0" 
                       FontSize="18"/>
            <ScrollViewer Height="200" 
                          Background="#F5F5F5" 
                          BorderBrush="#BDBDBD" 
                          BorderThickness="1" 
                          CornerRadius="6">
                <TextBlock Text="{Binding DetailedAnalysis}" 
                           Foreground="#424242"
                           FontSize="14"
                           TextWrapping="Wrap"
                           Margin="10"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</Window>